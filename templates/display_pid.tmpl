{% extends "base.tmpl" %}

{% block title %}{{ manufacturer_name }} - {{ pid_name }}{% endblock %}

{% block extra_headers %}
    <script src="/js/app.js"></script>
{% endblock %}

{% block content %}
    <fieldset>
        <legend>General Information</legend>
        <table>
            <tr>
                <td style="padding-right: 15px">Manufacturer</td>
                <td><a href="/manufacturer/display?manufacturer={{ manufacturer_id }}">{{ manufacturer_name }}</a></td>
            </tr>
            <tr>
                <td>Name</td>
                <td>{{ pid_name }}</td>
            </tr>
            <tr>
                <td>Value</td>
                <td>0x{{ pid_id|stringformat:"04hx" }}</td>
            </tr>
            {% if link %}
                <tr>
                    <td>More Info</td>
                    <td><a href="{{ link }}">{{ link }}</a></td>
                </tr>
            {% endif %}
        </table>
    </fieldset>

    {% if discovery_command %}
        <fieldset>
            <legend>Discovery Command</legend>
            <div>
                Sub Device Range:
                <span>{{ discovery_command.subdevice_range }}</span>
                <table width="100%" class="message_table">
                    <tr>
                        <th>Discovery Request</th>
                        <th>Discovery Response</th>
                    </tr>
                    <tr>
                        <td width="50%" class="message_structure">
                            <div id="discovery_request"></div>
                        </td>
                        <td width="50%" class="message_structure">
                            <div id="discovery_response"></div>
                        </td>
                    </tr>
                </table>
            </div>
            <script type="text/javascript">
                app.displayCommand(
                        {{ discovery_command.request_json|safe }},
                        'discovery_request');
                app.displayCommand(
                        {{ discovery_command.response_json|safe }},
                        'discovery_response');
            </script>
        </fieldset>
    {% endif %}


    <fieldset>
        <legend>Get Command</legend>
        {% if get_command %}
            <div>
                Sub Device Range:
                <span>{{ get_command.subdevice_range }}</span>
                <table width="100%" class="message_table">
                    <tr>
                        <th>Get Request</th>
                        <th>Get Response</th>
                    </tr>
                    <tr>
                        <td width="50%" class="message_structure">
                            <div id="get_request"></div>
                        </td>
                        <td width="50%" class="message_structure">
                            <div id="get_response"></div>
                        </td>
                    </tr>
                </table>
            </div>
            <script type="text/javascript">
                app.displayCommand(
                        {{ get_command.request_json|safe }},
                        'get_request');
                app.displayCommand(
                        {{ get_command.response_json|safe }},
                        'get_response');
            </script>
        {% else %}
            <div>Not Supported</div>
        {% endif %}
    </fieldset>

    <fieldset>
        <legend>Set Command</legend>
        {% if set_command %}
            <div>
                Sub Device Range:
                <span>{{ set_command.subdevice_range }}</span>
                <table width="100%" class="message_table">
                    <tr>
                        <th>Set Request</th>
                        <th>Set Response</th>
                    </tr>
                    <tr>
                        <td width="50%" class="message_structure">
                            <div id="set_request"></div>
                        </td>
                        <td width="50%" class="message_structure">
                            <div id="set_response"></div>
                        </td>
                    </tr>
                </table>
            </div>
            <script type="text/javascript">
                app.displayCommand(
                        {{ set_command.request_json|safe }},
                        'set_request');
                app.displayCommand(
                        {{ set_command.response_json|safe }},
                        'set_response');
            </script>
        {% else %}
            <div>Not Supported</div>
        {% endif %}
    </fieldset>

    {% if notes %}
        <fieldset>
            <legend>Notes</legend>
            <div>{{ notes }}</div>
        </fieldset>
    {% endif %}


    {% if supported_by %}
        <fieldset>
            <legend>Supported By</legend>
            <ul>
                {% for responder in supported_by %}
                    <li>
                        <a href="/model/display?manufacturer={{ responder.manufacturer }}&model={{ responder.model }}">{{ responder.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </fieldset>
    {% endif %}
{% endblock %}
