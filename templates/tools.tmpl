{% extends "base.tmpl" %}

{% block title %}RDM Manufacturer Index - Tools{% endblock %}

{% block content %}
    <div ng-app="rdmApp">
        <h3>Convert UID to EUID</h3>

        <div ng-controller="UIDController">
            <form class="form-inline" ng-submit="convertToEUID()">
                <div class="form-group">
                    <label for="covertor-input-uid">UID:</label>
                    <input id="covertor-input-uid" type="text" class="form-control" ng-model="uid"
                           placeholder="Enter a UID">
                </div>
                <input class="btn btn-primary" type="submit" value="Convert">
            </form>
            <span style="color: red;margin-top: 5px;padding-top: 5px;display: flex;">{[{error }]} </span>
            <span style="margin-top: 5px;padding-top: 5px;display: flex;">{[{euid}]} </span>
        </div>
        <hr>
        <h3>Convert EUID to UID</h3>
        <div ng-controller="EUIDController">
            <form class="form-inline" ng-submit="convertToUID()">
                <div class="form-group">
                    <label for="convertor-input-euid">EUID:</label>
                    <input id="convertor-input-euid" class="form-control" type="text" size=48 ng-model="euid"
                           placeholder="Enter a EUID">
                </div>
                <input class="btn btn-primary" type="submit" value="Convert">
            </form>
            <span style="color: red;margin-top: 5px;padding-top: 5px;display: flex;">{[{error}]}</span>
            <span style="margin-top: 5px;padding-top: 5px;display: flex;">{[{uid}]}</span>
        </div>
    </div>
{% endblock %}

{% block extra_headers %}
    <script src="/libs/angular/js/angular.min.js"></script>
    <script src="/js/rdm.js"></script>
{% endblock %}