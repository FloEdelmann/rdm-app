{% extends "base.tmpl" %}

{% block title %}Controller Search{% endblock %}

{% block extra_headers %}
<script src="/js/app.js"></script>
{% endblock %}

{% block content %}
<div class="search_div">
  {% block search_widget %}{% endblock %}
</div>
<table id="model_table" class="results_table">
 <thead>
  <tr>
   <th>Manufacturer Name<div class="sorter_icon">&nbsp;</div></th>
   <th>Controller Name<div class="sorter_icon">&nbsp;</div></th>
  </tr>
 </thead>
 <tbody>
  {% for controller in controllers %}
  <tr class="results_row" onclick="window.location='/controller/display?key={{ controller.key }}'">
   <td>{{ controller.manufacturer.name }}</td>
   <td>{{ controller.name }}</td>
  </tr>
  {% endfor %}
 </tbody>
</table>

<script type="text/javascript">
  app.makeModelTable("model_table");
</script>
{% endblock %}
