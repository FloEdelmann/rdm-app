{% extends "base_pid_search.tmpl" %}

{% block title %}Search PIDs by Manufacturer{% endblock %}

{% block search_widget %}
<form action="/pid/manufacturer" method="get">
Manufacturer: 
<select name="manufacturer">
  {% for manufacturer in manufacturers %}
  <option
    value="{{ manufacturer.id }}"
    {% if manufacturer.id == current_id %} selected {% endif %}>
    {{ manufacturer.name }} ({{ manufacturer.pid_count }})</option>
  {% endfor %}
</select>
<input type="submit" value="Search">
</form>
{% endblock %}
